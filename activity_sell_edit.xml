<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sell_edit_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBg"
    android:orientation="vertical"
    tools:context="garts.domain.com.garts.selledit.activities.SellEditItemActivity">

    <FrameLayout
        android:id="@+id/ase_top_fl"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_color">

        <ImageView
            android:id="@+id/ase_done_iv"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="13dp"
            android:src="@drawable/checkmark_ic" />

        <ImageView
            android:id="@+id/ase_back_iv"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="start|center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="13dp"
            android:src="@drawable/back_ic" />

        <TextView
            android:id="@+id/ase_screen_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/whiteTextColor"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            tools:text="@string/sell_edit_selling_title" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ase_add_images_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/sell_edit_add_images_title"
                android:textAllCaps="true"
                android:textColor="@color/grayTextColor"
                android:textSize="14sp"
                android:textStyle="normal|bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/ase_add_image1_fl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ase_add_image1_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:srcCompat="@drawable/add_image" />

                    <TextView
                        android:id="@+id/ase_add_image1_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/add_media_shape_bg"
                        android:gravity="center"
                        android:text="@string/sell_edit_image_text_placeholder"
                        android:textColor="@color/main_color"
                        android:textSize="13sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/ase_add_image2_fl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ase_add_image2_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:srcCompat="@drawable/add_image" />

                    <TextView
                        android:id="@+id/ase_add_image2_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/add_media_shape_bg"
                        android:gravity="center"
                        android:text="@string/sell_edit_image_text_placeholder"
                        android:textColor="@color/main_color"
                        android:textSize="13sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/ase_add_image3_fl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ase_add_image3_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:srcCompat="@drawable/add_image" />

                    <TextView
                        android:id="@+id/ase_add_image3_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/add_media_shape_bg"
                        android:gravity="center"
                        android:text="@string/sell_edit_image_text_placeholder"
                        android:textColor="@color/main_color"
                        android:textSize="13sp" />
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/ase_add_video_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/sell_edit_add_video_title"
                android:textAllCaps="true"
                android:textColor="@color/grayTextColor"
                android:textStyle="normal|bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <FrameLayout
                    android:id="@+id/ase_add_video_fl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ase_add_video_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:srcCompat="@drawable/add_video_image" />

                    <TextView
                        android:id="@+id/ase_add_video_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/add_media_shape_bg"
                        android:gravity="center"
                        android:text="@string/sell_edit_video_text_placeholder"
                        android:textColor="@color/main_color"
                        android:textSize="13sp" />
                </FrameLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/ase_details_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/sell_edit_details_title"
                android:textColor="@color/grayTextColor"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/ase_category_tv"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_shape_bg"
                android:drawableEnd="@drawable/down_ic"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:singleLine="true"
                android:text="@string/sell_edit_category_title"
                android:textColor="@color/blackTextColor" />

            <TextView
                android:id="@+id/ase_subcategory_tv"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_disabled_shape_bg"
                android:drawableEnd="@drawable/down_ic"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:singleLine="true"
                android:text="@string/sell_edit_subcategory_edit"
                android:textColor="@color/grayTextColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_shape_bg"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/sell_edit_title"
                    android:textColor="@color/grayTextColor"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/ase_item_title_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@null"
                    android:gravity="start|top"
                    android:hint="@string/sell_edit_title_hint"
                    android:singleLine="true"
                    android:textColor="@color/blackTextColor"
                    android:textColorHint="@color/grayTextColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_shape_bg"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/sell_edit_price_title"
                    android:textColor="@color/grayTextColor"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/ase_item_price_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@null"
                    android:gravity="start|top"
                    android:hint="@string/sell_edit_price_hint"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="@color/blackTextColor"
                    android:textColorHint="@color/grayTextColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/sell_edit_condition_title"
                android:textColor="@color/grayTextColor"
                android:textSize="12sp" />

            <RadioGroup
                android:id="@+id/ase_condition_rg"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/ase_new_condition_rb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/main_color"
                    android:button="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/filter_condition_new"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/ase_used_condition_rb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_shape_bg"
                    android:button="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/filter_condition_used"
                    android:textColor="@color/blackTextColor"
                    android:textSize="13sp" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/ase_location_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_shape_bg"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/sell_edit_location_title"
                    android:textColor="@color/grayTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/ase_location_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:gravity="start|top"
                    android:maxLines="2"
                    android:text="@string/sell_edit_choose_location_placeholder"
                    android:textColor="@color/grayTextColor"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/ase_location_description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/sell_edit_location_description"
                android:textSize="11sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_shape_bg"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/sell_edit_description_title"
                    android:textColor="@color/grayTextColor"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/ase_item_description_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@null"
                    android:gravity="start|top"
                    android:hint="@string/sell_edit_description_hint"
                    android:lines="3"
                    android:maxLines="3"
                    android:textColor="@color/blackTextColor"
                    android:textColorHint="@color/grayTextColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/ase_delete_ad_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="?attr/selectableItemBackground"
                android:drawablePadding="16dp"
                android:padding="10dp"
                android:text="@string/sell_edit_delete_button"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
