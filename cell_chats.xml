<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cchatsAdImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/cchatsAdTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cchatsAdImg"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/cchatsAdImg"
        android:text="@string/chats_item_text_placeholder"
        android:textColor="@color/blackTextColor"
        android:textSize="12sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/cchatsSenderTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cchatsAdTitleTxt"
        android:layout_alignStart="@+id/cchatsAdTitleTxt"
        android:layout_marginTop="5dp"
        android:text="@string/chats_item_text_placeholder"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/cchatsDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cchatsAdImg"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:text="@string/chats_item_text_placeholder"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/cchatsLastMessTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cchatsSenderTxt"
        android:layout_alignStart="@+id/cchatsSenderTxt"
        android:maxLines="2"
        android:text="@string/chats_item_text_placeholder"
        android:textColor="@color/main_color"
        android:textSize="11sp" />
</RelativeLayout>