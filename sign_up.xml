<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bkg"
    android:focusableInTouchMode="true"
    tools:context="garts.domain.com.garts.landing.SignUp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="800dp">

                <Button
                    android:id="@+id/signupDismissButt"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/dismiss_butt" />

                <EditText
                    android:id="@+id/usernameTxt2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="220dp"
                    android:layout_marginRight="30dp"
                    android:background="#96333333"
                    android:hint="@string/sign_up_username_hint"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:paddingLeft="44dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/whiteTextColor"
                    android:textColorHint="@color/inputHint"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/passwordTxt2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_below="@+id/usernameTxt2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="#96333333"
                    android:hint="@string/sign_up_password_hint"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:paddingLeft="44dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/whiteTextColor"
                    android:textColorHint="@color/inputHint"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/emailTxt2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_below="@+id/passwordTxt2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="#96333333"
                    android:hint="@string/sign_up_email_hint"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="44dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/whiteTextColor"
                    android:textColorHint="@color/inputHint"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/fullnameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_below="@+id/emailTxt2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="30dp"
                    android:background="#96333333"
                    android:hint="@string/sign_up_fullname_hint"
                    android:imeOptions="actionDone"
                    android:inputType="none"
                    android:paddingLeft="44dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/whiteTextColor"
                    android:textColorHint="@color/inputHint"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/touButt"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_below="@+id/signUpButt2"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@android:color/transparent"
                    android:text="@string/sign_up_agree_terms"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/signUpButt2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/fullnameTxt"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/main_color"
                    android:text="@string/sign_up_button"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignStart="@+id/usernameTxt2"
                    android:layout_alignTop="@+id/usernameTxt2"
                    app:srcCompat="@drawable/mini_user" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignStart="@+id/passwordTxt2"
                    android:layout_alignTop="@+id/passwordTxt2"
                    app:srcCompat="@drawable/mini_lock" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignStart="@+id/emailTxt2"
                    android:layout_alignTop="@+id/emailTxt2"
                    app:srcCompat="@drawable/mini_email" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignStart="@+id/fullnameTxt"
                    android:layout_alignTop="@+id/fullnameTxt"
                    app:srcCompat="@drawable/mini_user" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cadAvatarImg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/logo" />

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="44dp"
                    android:layout_below="@+id/cadAvatarImg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:background="@color/background_underlay">

                    <Button
                        android:id="@+id/signupCamButt"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/cam_icon" />

                    <Button
                        android:id="@+id/signupGalleryButt"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/library_icon" />
                </RelativeLayout>

                <Button
                    android:id="@+id/supCheckBoxButt"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignStart="@+id/signUpButt2"
                    android:layout_alignTop="@+id/touButt"
                    android:background="@drawable/checkbox_off" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
