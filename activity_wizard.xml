<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    tools:context="garts.domain.com.garts.wizard.WizardActivity">

    <Button
        android:id="@+id/wDismissButt"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dismiss_butt" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/tosButt"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dotsImg"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:background="@android:color/transparent"
        android:text="@string/wizard_terms_title"
        android:textAllCaps="false"
        android:textColor="@color/whiteTextColor"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/dotsImg"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/dots1" />

    <Button
        android:id="@+id/facebookButt"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_above="@+id/signupButt"
        android:layout_centerHorizontal="true"
        android:background="@drawable/facebook_butt"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/signupButt"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tosButt"
        android:layout_alignStart="@+id/facebookButt"
        android:layout_marginTop="10dp"
        android:background="@color/whiteTextColor"
        android:text="@string/wizard_signup_button"
        android:textAllCaps="false"
        android:textColor="@color/blackTextColor" />
</RelativeLayout>
